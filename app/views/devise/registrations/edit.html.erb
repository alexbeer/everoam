<body class="settings_body">

<div id="banner3">Settings</div>
<div class="edit_registrations">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
  <span class="customize_words">Name</span>
  <%= f.text_field :name, class: "form-control", :autofocus => true %>
</div>

<div class="form-group">

<span class="customize_words">Email</span>
<%= f.email_field :email, class: "form-control", :autofocus => true %>
</div>

<div class="form-group">
  <span class="customize_words">Username</span>
  <%= f.text_field :username, class: "form-control",:autofocus => true %>
</div>

<div class="form-group">
  <span class="customize_words">Location</span>
  <%= f.text_field :location, class: "form-control", placeholder: "Where are you?", :autofocus => true %>
</div>


<div class="form-group">

  <span class="customize_words">Bio</span>
  <%= f.text_field :bio, class: "form-control", placeholder: "Who are you?", :autofocus => true %>
</div>






  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
<hr>
  <div class="form-group">
    <span class="customize_words">Current Password</span>
     <i>(we need your current password to confirm your changes)</i><br />
  <%= f.password_field :current_password, class: "form-control" %>
</div>
<hr>
<p class="join">New Password</p>

  <div class="form-group">
    <span class="customize_words">New Password </span>
    <i>(leave blank if you don't want to change it)</i><br />
  <%= f.password_field :password, class: "form-control",  :autocomplete => "off" %>
</div>

  <div class="from-group">

  <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
</div>
<br>



  <div><%= f.submit "Update", class: "btn btn-primary" %></div>
<% end %>
<hr>

<span class="other_pages"><%= link_to "about", about_path %></span>
<span class="other_pages"><%= link_to "help", help_path %></span>
<span class="other_pages"><a href="http://blog.everoam.com">blog</a></span>
<span class="other_pages"><%= link_to "policies", policies_path %></span>

<hr>
<%= link_to "terminate account", terminate_path %>
<br>
<br>
<br>

</div>
</div>
<br>
<br>
</body>
