
<div class="container">
<div id="banner">Change Your Password</div>
<div class="registrations">
  <div class="panel-body">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group"><br />
    <%= f.password_field :password, class: "form-control", placeholder: "New Password", autofocus: true, autocomplete: "off" %></div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "New Password Confirmation", autocomplete: "off" %></div>

  <div><%= f.submit "Change my password", class: "btn btn-primary btn_wide" %></div>
<% end %>


</div>
</div>
