<div class="login_registrations">

<div class="panel-body">

<p class="join">Forgot your password?</p>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
<br>
  <%= f.email_field :email, class: "form-control", placeholder: "Email" ,:autofocus => true %>
</div>

  <div class="form-group"><%= f.submit "Send me instructions", class: "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
